<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/postdetail_commentreply_layout_margin"
    android:padding="@dimen/postdetail_commentreply_layout_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="└"
        android:textSize="@dimen/postdetail_commentreply_symbol_textsize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_commentreply_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/postdetail_commentreply_marginleft"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_commentreply_userid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="userid"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_commentreply_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="time"
                android:textColor="#616161" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_commentreply_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/postdetail_commentreply_marginleft"
            android:text="content" /> <!-- 임시 -->
    </LinearLayout>

</LinearLayout>