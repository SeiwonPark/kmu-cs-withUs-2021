<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostFormActivity">

    <LinearLayout
        android:id="@+id/activity_post_form_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/activity_post_form_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="@string/post_form_text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/activity_post_form_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="start"
            android:hint="@string/post_form_title"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="50dp"
            android:padding="4dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/activity_post_form_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="start"
            android:hint="@string/post_form_content"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:minHeight="250dp"
            android:padding="4dp"
            android:textAlignment="textStart"
            android:textSize="20sp"/>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:paddingTop="12dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/activity_post_form_image_btn"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:layout_gravity="end"
            android:backgroundTint="@color/snow"
            android:src="@drawable/ic_menu_camera"/>


        <Button
            android:id="@+id/activity_post_form_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/post_form_done"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>