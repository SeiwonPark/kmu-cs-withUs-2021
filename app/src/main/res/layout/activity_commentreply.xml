<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/commentreply_layout_margin"
    android:orientation="vertical"
    android:padding="@dimen/commentreply_layout_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/brightgray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_commentreply_tv_userid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:text="userid"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_commentreply_tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="right"
                android:text="date"
                android:textColor="#616161" />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_commentreply_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="content" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_commentreply_et_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/brightgray"
            android:hint="@string/commentreply_comment_hint"
            android:imeOptions="actionDone"
            android:padding="@dimen/commentreply_reply_padding"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/activity_commentreply_btn_replyok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/commentreply_comment_register"
            android:textSize="@dimen/commentreply_replyok_textsize"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

</LinearLayout>